@{
    ViewData["Title"] = "Home Page";
}

@model PruebaViewModel

<div class="row">
    <div class="col-4">
        <form asp-action="RegistrarCandidato" method="post" class="needs-validation" novalidate>

            <!-- Nombres -->
            <div class="mb-3">
                <label class="form-label">Nombres</label>
                <input asp-for="Prueba.Name" class="form-control" required>
                <span asp-validation-for="Prueba.Name" class="text-danger"></span>
            </div>

            <!-- Tipo de Documento -->
            <div class="mb-3">
                <label class="form-label">Tipo de Documento</label>
                <select asp-for="Prueba.TipoDocumento" class="form-select" required>
                    <option selected value="">Seleccione...</option>
                    <option value="Cédula de ciudadanía">Cédula de ciudadanía</option>
                    <option value="Tarjeta de identidad">Tarjeta de identidad</option>
                    <option value="Cédula de extranjería">Cédula de extranjería</option>
                </select>
                <span asp-validation-for="Prueba.TipoDocumento" class="text-danger"></span>
            </div>

            <!-- Fecha de Nacimiento -->
            <div class="mb-3">
                <label class="form-label">Fecha de Nacimiento</label>
                <input asp-for="Prueba.FechaNacimiento" type="date" class="form-control" required>
                <span asp-validation-for="Prueba.FechaNacimiento" class="text-danger"></span>
            </div>

            <!-- Valor a Ganar -->
            <div class="mb-3">
                <label class="form-label">Valor a Ganar</label>
                <input asp-for="Prueba.ValorGanar" class="form-control" type="number" step="0.01">
                <span asp-validation-for="Prueba.ValorGanar" class="text-danger"></span>
            </div>

            <!-- Estado Civil -->
            <div class="mb-3">
                <label class="form-label">Estado Civil</label>
                <div>
                    <div class="form-check">
                        <input asp-for="Prueba.EstadoCivil" type="radio" class="form-check-input" value="Soltero" required>
                        <label class="form-check-label">Soltero(a)</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Prueba.EstadoCivil" type="radio" class="form-check-input" value="Casado">
                        <label class="form-check-label">Casado(a)</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Prueba.EstadoCivil" type="radio" class="form-check-input" value="Viudo(a)">
                        <label class="form-check-label">Viudo(a)</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Prueba.EstadoCivil" type="radio" class="form-check-input" value="Unión Libre">
                        <label class="form-check-label">Unión Libre</label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
    <div class="col-8">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Tipo documento</th>
                    <th>Fecha nacimiento</th>
                    <th>Valor a ganar</th>
                    <th>Estado civil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Pruebas)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.TipoDocumento</td>
                        <td>@item.FechaNacimiento</td>
                        <td>@item.ValorGanar</td>
                        <td>@item.EstadoCivil</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
